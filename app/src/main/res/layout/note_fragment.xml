<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/note_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/list_access"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below = "@id/note_text"/>

        <EditText
            android:id="@+id/new_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below = "@id/list_access"
            />

        <Button
            android:id="@+id/add_access_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:layout_below="@id/list_access"
            android:layout_toRightOf = "@id/new_access"/>

        <TextView
            android:id="@+id/note_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_access"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>